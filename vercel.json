{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/tmp/qr_codes/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*\\.(svg|png|jpg|jpeg|gif|ico|css|js))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
